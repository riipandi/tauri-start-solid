{
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "editor.defaultFormatter": "biomejs.biome",
    "files.exclude": {
        "**/tmp/**": true
    },
    "search.exclude": {
        "**/.tsbuildinfo": true,
        "**/.output/**": true,
        "**/.vscode/**": true,
        "**/build": true,
        "**/dist": true
    },
    "files.associations": {
        "*.yml.example": "yaml",
        "*.css": "tailwindcss",
        "*.plist": "xml"
    },
    // "tailwindCSS.experimental.classRegex": [
    //     // https://www.tailwind-variants.org/docs/getting-started#intellisense-setup-optional
    //     ["([\"'`][^\"'`]*.*?[\"'`])", "[\"'`]([^\"'`]*).*?[\"'`]"],
    //     "cn\\(([^)]*)\\)", // cn(xxx)
    //     "clx\\(([^)]*)\\)", // clx(xxx)
    //     "cx\\(([^)]*)\\)" // cx(xxx)
    // ],
    "tailwindCSS.files.exclude": ["**/src-tauri/**", "vite.config.ts"],
    "[json]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[markdown]": {
        "editor.defaultFormatter": "darkriszty.markdown-table-prettify"
    },
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml",
        "editor.formatOnSave": false
    },
    "rust-analyzer.linkedProjects": ["./src-tauri/Cargo.toml"],
    "rust-analyzer.showUnlinkedFileNotification": false
}
